<!-- 全局视图 -->
<div id="appmanage">
    <a class="amg_close" href="javascript:void(0);"></a>
    <div id="amg_dock_container"></div>
    <div class="amg_line_x"></div>
    <div id="amg_folder_container">

        @{
            Int32 internanIndex = 1;
            var desks = userResult.Desks;
            foreach (var deskItem in desks)
            {
                if (internanIndex == 1)
                {
                    <div class="folderItem" data-deskname="@deskItem.DeskName">
                        <div class="folder_bg"></div>
                        <div class="folderOuter">
                            <div class="folderInner" desk="@internanIndex">@internanIndex</div>
                            <div class="scrollBar"></div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="folderItem" data-deskname="@deskItem.DeskName">
                        <div class="folder_bg"></div>
                        <div class="folderOuter">
                            <div class="folderInner" desk="@internanIndex">@internanIndex</div>
                            <div class="scrollBar"></div>
                        </div>
                        <div class="amg_line_y"></div>
                    </div>
                }
                internanIndex = internanIndex + 1;
            }
        }
    </div>
</div>
<script>
    $(function () {
        document.body.onselectstart = document.body.ondrag = function () {
            return false;
        };
        $(".loading").hide();
        $("#desktop").show();

        HROS.CONFIG.dockPos = '@userResult.DockPosition';
        HROS.CONFIG.appXY = '@userResult.AppXy';
        HROS.CONFIG.appSize = '@userResult.AppSize';
        HROS.CONFIG.desk = '@userResult.DefaultDesk';
        HROS.CONFIG.appHorizontalSpacing = '@userResult.AppHorizontalSpacing';
        HROS.CONFIG.appVerticalSpacing = '@userResult.AppVerticalSpacing';
        HROS.CONFIG.deskCount = parseInt('@userResult.Desks.Count');
        HROS.base.init();
    })
</script>


