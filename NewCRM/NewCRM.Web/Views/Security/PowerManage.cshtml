@{
    Layout = "~/Views/Shared/_LayoutApps.cshtml";
}
@section ChildrenCss
{
    <style>
        body
        {
            margin: 10px 10px 0;
        }
    </style>
}


<div class="well well-small" style="margin-bottom:10px">
    <div class="form-inline">
        <label>权限名称：</label>
        <input type="text" name="powerName" id="powerName" class="span2">
        <a class="btn" menu="search" href="javascript:;" style="margin-left:10px"><i class="icon-search"></i> 搜索</a>
        <a class="btn btn-primary fr" href="javascript:openDetailIframe('@Url.Action("CreateNewPower", "Security")');"><i class="icon-white icon-plus"></i> 创建新权限</a>
    </div>
</div>
<table class="list-table">
    <thead>
        <tr class="col-name">
            <th>权限名称</th>
            <th>权限标识</th>
            <th style="width: 150px">操作</th>
        </tr>
        <tr class="sep-row"><td colspan="100"></td></tr>
        <tr class="toolbar">
            <td colspan="100">
                <b style="margin: 0 10px">符合条件的记录</b>有<font class="list-count">0</font>条
            </td>
        </tr>
        <tr class="sep-row"><td colspan="100"></td></tr>
    </thead>
    <tbody class="list-con"></tbody>
    <tfoot>
        <tr>
            <td colspan="100">
                <div class="pagination pagination-centered" id="pagination"></div>
                <input id="pagination_setting" type="hidden" per="15">
            </td>
        </tr>
    </tfoot>
</table>

<div id="detailIframe" style="background:#fff;position:fixed;z-index:1;top:-100px;left:0;width:100%;height:100%;display:none">
    <iframe frameborder="0" style="width:100%;height:100%"></iframe>
</div>

@section ChildrenScript
{
    <script src="@Url.Content("~/Scripts/handlebars-v4.0.5.js")"></script>

    <script id="table-template" type="text/x-handlebars-template">
        {{#each powers}}
        <tr class="list-bd">
            <td style="text-align:left;padding-left:15px">{{Name}}</td>
            <td style="text-align:left;padding-left:15px">{{PowerIdentity}}</td>
            <td>
                <a href="javascript:openDetailIframe('@Url.Action("CreateNewPower", "Security")?powerId={{Id}}');" class="btn btn-link">编辑</a>
                <a href="javascript:;" class="btn btn-link do-del" data-powerid="{{Id}}">删除</a>
            </td>
        </tr>
        {{/each}}
    </script>

    <script>
        $(function () {
            //加载列表
            getPageList(1);
            //删除
            $('.list-con').on('click', '.do-del', function () {
                var powerId = $(this).attr('data-powerid');
                var name = $(this).parent().prev().text();
                $.dialog({
                    id: 'ajaxedit',
                    content: '确定要删除 “' + name + '” 该权限？',
                    ok: function () {
                        $.post('@Url.Action("RemovePower", "Security")', { powerId: parseInt(powerId) }, function (responseText) {
                            if (typeof responseText.success !== 'undefined') {
                                ZENG.msgbox.show('移除成功', 4, 3000);
                                getPageList(1);
                            }
                        });
                    },
                    cancel: true
                });
            });
            //搜索
            $('a[menu=search]').click(function () {
                getPageList(1);
            });
        });

        function initPagination(current_page) {
            $('#pagination').pagination(parseInt($('#pagination_setting').attr('count')), {
                current_page: current_page,
                items_per_page: parseInt($('#pagination_setting').attr('per')),
                num_display_entries: 9,
                num_edge_entries: 2,
                callback: getPageList,
                prev_text: '上一页',
                next_text: '下一页'
            });
        }

        function getPageList(current_page) {
            ZENG.msgbox.show('正在加载中，请稍后...', 6, 8000);

            $.get('@Url.Action("GetAllPowers", "Security")', {
                powerName: $('#powerName').val(),
                pageIndex: current_page,
                pageSize: 5
            }, function (responseText) {
                ZENG.msgbox.hide();

                var tableTemplate = Handlebars.compile($("#table-template").html());
                $('.list-con').html(tableTemplate(responseText));

                $('#pagination_setting').attr('count', responseText.totalCount);
                $('.list-count').text(responseText.totalCount);

                initPagination(current_page);
            });
        }

    </script>
}


